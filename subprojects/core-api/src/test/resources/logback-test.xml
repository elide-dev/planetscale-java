<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>[%cyan(%d{HH:mm:ss.SSS}) %highlight(%5level)] %boldWhite(%logger) %msg%n</pattern>
        </encoder>
    </appender>
    <serializeModel file="src/test/resources/logback-test.scmo"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
